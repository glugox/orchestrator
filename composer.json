{
  "name": "glugox/orchestrator",
  "description": "A Laravel framework to build modular applications.",
  "keywords": [
    "laravel",
    "framework",
    "glugox",
    "orchestrator",
    "modules"
  ],
  "type": "library",
  "version": "1.0.0",
  "require": {
    "php": ">=8.2",
    "glugox/module": "@dev",
    "glugox/magic": "@dev"
  },
  "require-dev": {
    "driftingly/rector-laravel": "^2.0.7",
    "fakerphp/faker": "^1.24.1",
    "larastan/larastan": "^3.7.2",
    "laravel/boost": "^1.3.0",
    "laravel/pail": "^1.2.3",
    "laravel/pint": "^1.25.1",
    "mockery/mockery": "^1.6.12",
    "nunomaduro/collision": "^8.8.2",
    "orchestra/testbench": "^10.6.0",
    "pestphp/pest": "^4.1",
    "pestphp/pest-plugin-browser": "^4.1.1",
    "pestphp/pest-plugin-laravel": "^4.0.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.2",
    "rector/rector": "^2.2.2"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Glugox\\Orchestrator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Workbench\\App\\": "workbench/app/",
      "Workbench\\Database\\Factories\\": "workbench/database/factories/",
      "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
    }
  },
  "authors": [
    {
      "name": "Glugox",
      "email": "glugox@gmail.com"
    }
  ],
  "extra": {
    "laravel": {
      "providers": [
        "Glugox\\Orchestrator\\OrchestratorServiceProvider"
      ],
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "../module",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "../magic",
      "options": {
        "symlink": true
      }
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "build": "@php vendor/bin/testbench workbench:build --ansi",
    "serve": [
      "Composer\\Config::disableProcessTimeout",
      "@build",
      "@php vendor/bin/testbench serve --ansi"
    ],
    "lint": [
      "@php vendor/bin/pint --ansi",
      "@php vendor/bin/phpstan analyse --verbose --ansi"
    ],
    "test:type-coverage": "pest --type-coverage --min=100",
    "test:lint": [
      "pint --parallel --test",
      "rector --dry-run",
      "npm run test:lint"
    ],
    "test:unit": "pest --parallel --coverage --exactly=100.0",
    "test:types": "vendor/bin/phpstan analyse",
    "test": [
      "@test:type-coverage",
      "@test:unit",
      "@test:lint",
      "@test:types"
    ]
  }
}
